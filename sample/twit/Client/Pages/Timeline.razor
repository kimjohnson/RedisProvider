@page "/timeline"
@page "/timeline/{location}"
@using Twit.Shared
@inject Services.AppState AppState

<h1>@Header</h1>
@if (timeline == null) {
    <p>
        <em>Loading...</em>
    </p>
} else {
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>User</th>
                <th>Message</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in timeline) {
                <tr>
                    <td>@post.Posted?.ToLocalTime().ToString()</td>
                    <td>@post.UserName</td>
                    <td>@post.Message</td>
                </tr>
            }
        </tbody>
    </table>
    @if (timeline.Count == 0) {
        <p>Nothing to see here yet!</p>
    }
}

@code {

    [Parameter]
    public string Location { get; set; }

    private IList<PostDto> timeline;
    private string Header;


    protected override async Task OnInitializedAsync() {
        if (!string.IsNullOrEmpty(Location)) {
            timeline = await AppState.GetTimeline(Location);
            Header = Location;
        } else {

            if (AppState.IsLoggedIn) {
                timeline = await AppState.GetTimeline("home");
                Header = "Home";
            } else {
                timeline = await AppState.GetTimeline("");
                Header = "Explore";
            }
        }
    }

}
